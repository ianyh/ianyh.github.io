extends main

block main
	.row.main: .twelve.columns
		header
			h1: a(href="/posts") Bias and Sandwiches

		section
			if collections.posts && collections.posts.length > 0
				.posts
					each post in collections.posts
						article
							header
								h2: a(href="/"+post.path)!= post.title
							section
								.byline
									time #{moment(post.publishDate).format('M.D.YYYY')}
									span  by #{post.author}
							section
								.excerpt!= post.excerpt
						hr
