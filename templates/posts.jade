extends layout

block main
	.row: .twelve.columns
		section
			h1 Posts

			if collections.posts && collections.posts.length > 0
				each post in collections.posts
					.row
						h2: a(href="/"+post.path)!= post.title
						.excerpt!= post.excerpt
			else
				h2= collections.posts.length
				h2 There are no posts
